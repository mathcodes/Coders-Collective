<div class="container">	
	<div class="jumbotron"> 
		<h1> CODER'S COLLECTIVE </h1>
		<h4 style="text-align: left;">A site for us too all share those one-side, brightly-colored, cheat-sheeting, pieces of GOLD we call information. Just paste a link to the image, pdf, doc or file of anytype into the form below and click ADD.</h4>
	</div>
	<div>
		<p class="lead"> What link are you providing today? </p>

		<form class="create-update-form" action="burgers/create" method="POST">

			<div class="form-group">
				<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-success btn-lg" type="submit;">ADD IT!</button>
		</form>
	</div>
<br>
	<div class="row">
		<div class="col-md-6 col-md-offset-0">
			<div class="panel-panel default">
				<ol>
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item rtc">
						<p class="lead"><img src="{{this.burger_name}}" alt="ALT LOG" width="60px" height="60px" border-radius="15px"></p>
							<div class="lists">
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button class="btn btn-default btn-success btn-md" type="submit">LOG IT</button>
								</form>
							</div>
						
					</li>
					{{/unless}}
				{{/each}}
			</ol>
		</div>
	</div>
	<div class="col-md-6 col-md-offset-0">
		<div class="panel panel-default">
			<ol class="list-group">
			{{#each burgers}}
				{{#if this.devoured}}
				<li class="list-group-item eaten">
														<p class="lead"><img src="{{this.burger_name}}" alt="ALT REPLACE" width="60px" height="60px" border-radius="15px"></p>
					<div class="lists">
							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST" >
								<input type="hidden" name="devoured" value="false">
								<button class="btn btn-default btn-success btn-md" type="submit">REPLACE</button>
							</form>
						</div>
				</li>
				{{/if}}
			{{/each}}
			</ol>
		</div>
	</div>


</div>